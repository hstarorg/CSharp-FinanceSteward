@model Hstar.FinanceSteward.Model.UsersEntity
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>登录 - 幻星财务管家</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link href="~/Scripts/Plugins/bootstrap3.1.1/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/font-awesome.min.css" rel="stylesheet" />
    <!--[if IE 7]>
        <link href="~/Content/assets/css/font-awesome-ie7.min.css" rel="stylesheet" />
    <![endif]-->
    <!-- ace styles -->
    <link href="~/Content/assets/css/ace.min.css" rel="stylesheet" />
    <link href="~/Content/assets/css/ace-rtl.min.css" rel="stylesheet" />
    <!--[if lte IE 8]>
        <link href="~/Content/assets/css/ace-ie.min.css" rel="stylesheet" />
    <![endif]-->
    <!--[if lt IE 9]>
        <script src="~/Scripts/Plugins/html5/html5shiv.js"></script>
        <script src="~/Scripts/Plugins/html5/respond.min.js"></script>
	<![endif]-->
</head>
<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-sm-10 col-sm-offset-1">
                    <div class="login-container">
                        <div class="center">
                            <h1>
                                <i class="icon-leaf green"></i>
                                <span class="red">Ace</span>
                                <span class="white">幻星财务管家</span>
                            </h1>
                            <h4 class="blue">&copy; 幻星科技</h4>
                        </div>
                        <div class="space-6"></div>
                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <h4 class="header blue lighter bigger">
                                            <i class="icon-coffee green"></i>
                                            请输入您的信息
                                        </h4>
                                        <div class="space-6"></div>
                                        @using (Html.BeginForm())
                                        {
                                            <fieldset>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "账户" })
                                                        <i class="icon-user"></i>
                                                    </span>
                                                </label>
                                                <label class="block clearfix">
                                                    <span class="block input-icon input-icon-right">
                                                        @Html.PasswordFor(m => m.UserPass, new { @class = "form-control", placeholder = "密码" })
                                                        <i class="icon-lock"></i>
                                                    </span>
                                                </label>
                                                <div class="space"></div>
                                                <div class="clearfix">
                                                    <label class="inline">
                                                        <input type="checkbox" name="RememberAccount" class="ace" value="true" @(ViewBag.RememberAccount ? "checked" : "") />
                                                        <span class="lbl">记住账户</span>
                                                    </label>
                                                    <button type="submit" class="width-35 pull-right btn btn-sm btn-primary">
                                                        <i class="icon-key"></i>
                                                        登录
                                                    </button>
                                                </div>
                                                <div class="space-4"></div>
                                            </fieldset>

                                            <div class="social-or-login center">
                                                <span class="bigger-110">信息提示</span>
                                            </div>
                                            <div class="social-login center">
                                                @Html.ValidationMessageFor(m => m.UserName)
                                                @Html.ValidationMessageFor(m => m.UserPass)
                                                @Html.ValidationMessage("loginerror")
                                            </div>
                                        }
                                    </div>
                                    <!-- /widget-main -->
                                    @* <div class="toolbar clearfix">
                                        <div>
                                            <a href="#" onclick="show_box('forgot-box'); return false;" class="forgot-password-link">
                                                <i class="icon-arrow-left"></i>
                                                忘记密码
                                            </a>
                                        </div>

                                        <div>
                                            <a href="#" onclick="show_box('signup-box'); return false;" class="user-signup-link">我要注册
													<i class="icon-arrow-right"></i>
                                            </a>
                                        </div>
                                    </div>*@
                                </div>
                                <!-- /widget-body -->
                            </div>
                            <!-- /login-box -->
                        </div>
                        <!-- /position-relative -->
                    </div>
                </div>
                <!-- /.col -->
            </div>
            <!-- /.row -->
        </div>
    </div>
    <!-- /.main-container -->
    @Scripts.Render("~/bundles/jquery", "~/bundles/jqueryval")
    <script>
        if (self != parent) {
            parent.location.href = self.location.href;
        }
    </script>
</body>
</html>